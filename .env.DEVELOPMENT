# DEVELOPMENT ENVIRONMENT - SAFE TO EXPERIMENT
# This is the isolated environment for testing hierarchical memory

ENVIRONMENT_NAME=DEVELOPMENT
CHROMA_HOST=localhost
CHROMA_PORT=8001
MEMORY_COLLECTION_NAME=ai_memories_DEVELOPMENT
INSTANCE_LABEL=ðŸ§ª DEVELOPMENT

# Core settings (can be modified for testing)
MEMORY_IMPORTANCE_THRESHOLD=0.7
MAX_MEMORY_RESULTS=10
MCP_SERVER_NAME=ai-memory-server-dev
MCP_SERVER_VERSION=2.0.0-dev

# Obsidian Integration (project-local vault with development subfolder)
OBSIDIAN_VAULT_PATH=./Project_Context/vault/Development

# Session Logging (mark as development)
AUTO_START_SESSION_LOGGING=true
SESSION_LOGGING_PROJECT_NAME=MCP ChromaDB Memory - DEVELOPMENT
SESSION_LOGGING_SAVE_ON_EXIT=true

# Feature Flags - ENABLE FOR TESTING
TIER_ENABLED=true
CONSOLIDATION_ENABLED=true
PATTERN_RECOGNITION_ENABLED=true

# Tier Configuration
TIER_WORKING_RETENTION=48
TIER_SESSION_RETENTION=336
TIER_LONGTERM_RETENTION=8760
TIER_MIGRATION_INTERVAL=3600000
TIER_WORKING_MAX_SIZE=1000
TIER_SESSION_MAX_SIZE=5000
TIER_LONGTERM_MAX_SIZE=50000

# Code indexing for Code Intelligence
CODE_INDEXING_ENABLED=true

# Batch and rate limiting (conservative settings to prevent throttling)
BATCH_SIZE=50
BATCH_DELAY_MS=500
MAX_CONCURRENT_BATCHES=1
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=2000

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DATABASE=mcp_memory_dev
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_memory_dev_pass
POSTGRES_POOL_MAX=20
POSTGRES_POOL_MIN=5

# Hybrid Storage Feature Flags (test in development first)
USE_HYBRID_STORAGE=true
ENABLE_DUAL_WRITE=true
POSTGRES_READ_RATIO=0.5