{
  "mcpServers": {
    "coachntt": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network", "coachntt-network",
        "-v", "C:/path/to/your/project:/project:ro",
        "-e", "OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE",
        "-e", "DOCKER_CONTAINER=true",
        "-e", "CHROMA_HOST=chromadb-coachntt",
        "-e", "CHROMA_PORT=8000",
        "-e", "POSTGRES_HOST=postgres-coachntt",
        "-e", "POSTGRES_PORT=5432",
        "-e", "POSTGRES_DATABASE=coachntt_memory",
        "-e", "POSTGRES_USER=coachntt_user",
        "-e", "POSTGRES_PASSWORD=coachntt_pass",
        "-e", "USE_HYBRID_STORAGE=true",
        "-e", "ENABLE_DUAL_WRITE=true",
        "-e", "CODE_INDEXING_ENABLED=true",
        "-e", "MEMORY_IMPORTANCE_THRESHOLD=0.6",
        "-e", "MAX_MEMORY_RESULTS=20",
        "coachntt-server"
      ]
    }
  }
}