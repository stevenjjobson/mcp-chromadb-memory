{
  "mcpServers": {
    "memory": {
      "comment": "Main MCP ChromaDB Memory Server with dual vault support",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name", "claude-mcp-memory",
        "--network", "mcp-chromadb-memory_memory-network",
        "-v", "C:/path/to/your/core-vault:/core-vault:rw",
        "-v", "C:/path/to/your/project-vault:/project-vault:rw",
        "-e", "OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE",
        "-e", "DOCKER_CONTAINER=true",
        "-e", "CHROMA_HOST=chromadb-memory",
        "-e", "CHROMA_PORT=8000",
        "-e", "POSTGRES_HOST=postgres-memory",
        "-e", "POSTGRES_PORT=5432",
        "-e", "POSTGRES_USER=mcp_user",
        "-e", "POSTGRES_PASSWORD=mcp_memory_pass",
        "-e", "POSTGRES_DB=mcp_memory",
        "-e", "USE_HYBRID_STORAGE=true",
        "-e", "ENABLE_DUAL_WRITE=true",
        "-e", "POSTGRES_READ_RATIO=0.5",
        "-e", "VAULT_MODE=dual",
        "-e", "CORE_VAULT_PATH=/core-vault",
        "-e", "PROJECT_VAULT_PATH=/project-vault",
        "-e", "OBSIDIAN_VAULT_PATH=/project-vault",
        "-e", "DEFAULT_VAULT_CONTEXT=project",
        "-e", "ENABLE_CROSS_VAULT_SEARCH=true",
        "-e", "AUTO_START_SESSION_LOGGING=true",
        "-e", "SESSION_LOGGING_PROJECT_NAME=Your Project Name",
        "-e", "SESSION_LOGGING_SAVE_ON_EXIT=true",
        "-e", "CODE_INDEXING_ENABLED=true",
        "-e", "CODE_PATTERN_DETECTION=true",
        "-e", "CODE_STREAMING_ENABLED=true",
        "-e", "MEMORY_TIER_ENABLED=true",
        "-e", "ENABLE_MIGRATION_SERVICE=true",
        "-e", "ENABLE_PATTERN_SERVICE=true",
        "mcp-chromadb-memory-mcp-memory"
      ]
    },
    "memory-local": {
      "comment": "Local development version (non-Docker)",
      "command": "node",
      "args": [
        "C:/path/to/mcp-chromadb-memory/dist/index.js"
      ],
      "env": {
        "OPENAI_API_KEY": "YOUR_OPENAI_API_KEY_HERE",
        "CHROMA_HOST": "localhost",
        "CHROMA_PORT": "8000",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_USER": "mcp_user",
        "POSTGRES_PASSWORD": "mcp_memory_pass",
        "POSTGRES_DB": "mcp_memory",
        "USE_HYBRID_STORAGE": "true",
        "VAULT_MODE": "dual",
        "CORE_VAULT_PATH": "C:/path/to/your/core-vault",
        "PROJECT_VAULT_PATH": "C:/path/to/your/project-vault"
      }
    },
    "coachntt": {
      "comment": "CoachNTT specialized implementation with audio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network", "coachntt-network",
        "-v", "C:/path/to/your/project:/project:ro",
        "-e", "OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE",
        "-e", "ELEVENLABS_API_KEY=YOUR_ELEVENLABS_API_KEY_HERE",
        "-e", "DOCKER_CONTAINER=true",
        "-e", "CHROMA_HOST=chromadb-coachntt",
        "-e", "CHROMA_PORT=8000",
        "-e", "POSTGRES_HOST=postgres-coachntt",
        "-e", "POSTGRES_PORT=5432",
        "-e", "POSTGRES_DATABASE=coachntt_memory",
        "-e", "POSTGRES_USER=coachntt_user",
        "-e", "POSTGRES_PASSWORD=coachntt_pass",
        "-e", "USE_HYBRID_STORAGE=true",
        "-e", "ENABLE_DUAL_WRITE=true",
        "-e", "CODE_INDEXING_ENABLED=true",
        "-e", "MEMORY_IMPORTANCE_THRESHOLD=0.6",
        "-e", "MAX_MEMORY_RESULTS=20",
        "-e", "ELEVENLABS_DEFAULT_VOICE=EXAVITQu4vr4xnSDxMaL",
        "-e", "ELEVENLABS_MODEL=eleven_monolingual_v1",
        "coachntt-server"
      ]
    }
  }
}