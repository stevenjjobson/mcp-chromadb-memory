# CoachNTT MCP Server Environment Variables

# Required: OpenAI API key for embeddings
OPENAI_API_KEY=your-openai-api-key-here

# ElevenLabs API key for voice synthesis
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=coachntt_cognitive_db
POSTGRES_USER=coachntt_user
POSTGRES_PASSWORD=coachntt_pass

# Feature Configuration
USE_HYBRID_STORAGE=true
CODE_INDEXING_ENABLED=true
MEMORY_IMPORTANCE_THRESHOLD=0.6
AUTO_START_SESSION_LOGGING=true
SESSION_LOGGING_PROJECT_NAME=CoachNTT

# CoachNTT Platform Settings
COACHNTT_PLATFORM_VERSION=1.0.0
COACHNTT_VOICE_ENABLED=true
COACHNTT_DEFAULT_VOICE=EXAVITQu4vr4xnSDxMaL
COACHNTT_VOICE_MODEL=eleven_monolingual_v1