  "templates": [
    {
      "folderPath": "10-Active-Projects/*",
      "templateId": "project-template",
      "isDefault": true,
      "autoApply": true,
      "variables": {
        "projectName": "{{folder.name}}",
        "createdDate": "{{_system.date}}"
      }
    },
    {
      "folderPath": "20-Development-Stack/21-Languages/*",
      "templateId": "language-reference",
      "inheritFrom": "technical-documentation",
      "variables": {
        "technology": "{{folder.name}}",
        "type": "language"
      }
    },
    {
      "folderPath": "40-Code-Library/41-Snippets/**",
      "templateId": "code-snippet-template",
      "variables": {
        "language": "{{folder.parent.name}}",
        "category": "{{folder.name}}"
      }
    },
    {
      "folderPath": "70-Task-Management/71-Daily-Notes/*",
      "templateId": "daily-note-template",
      "variables": {
        "date": "{{file.name}}",
        "activeProjects": "{{vault.activeProjects}}"
      }
    }
  ],
  "hooks": [
    {
      "id": "project-structure",
      "name": "Project Structure Creator",
      "trigger": "folder_created",
      "folderPattern": "10-Active-Projects/*",
      "action": {
        "type": "create_subfolders",
        "folders": ["tasks", "documentation", "research", "meetings", "decisions"],
        "applyTemplates": true
      }
    },
    {
      "id": "snippet-indexer",
      "name": "Code Snippet Indexer",
      "trigger": "file_created",
      "folderPattern": "40-Code-Library/41-Snippets/**/*.md",
      "action": {
        "type": "index_snippet",
        "generateTags": true,
        "updateHub": true
      }
    },
    {
      "id": "daily-note-linker",
      "name": "Daily Note Project Linker",
      "trigger": "file_created",
      "folderPattern": "70-Task-Management/71-Daily-Notes/*.md",
      "action": {
        "type": "link_active_projects",
        "updateDashboard": true
      }
    },
    {
      "id": "technology-hub",
      "name": "Technology Hub Generator",
      "trigger": "folder_created",
      "folderPattern": "20-Development-Stack/*/*",
      "action": {
        "type": "generate_hub",
        "hubTemplate": "technology-hub",
        "linkChildren": true
      }
    }
  ],
  "metadata": {
    "version": "1.0.0",
    "lastUpdated": "2024-01-07",
    "compatibility": {
      "minVersion": "2.0.0",
      "platforms": ["obsidian", "filesystem", "cloud"]
    },
    "tags": {
      "structure": [
        "#project/active",
        "#project/completed",
        "#project/archived",
        "#tech/language/*",
        "#tech/framework/*",
        "#tech/tool/*",
        "#type/snippet",
        "#type/tutorial",
        "#type/reference",
        "#priority/high",
        "#priority/medium",
        "#priority/low"
      ]
    }
  }
